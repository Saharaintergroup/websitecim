<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partners_logo_form" model="ir.ui.view">
            <field name="name">partners.logo.form</field>
            <field name="model">partners.logo</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Partners logo">
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="partners_logo_action" model="ir.actions.act_window">
            <field name="name">Partners logo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partners.logo</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    List of partners with their logo.
                </p>
            </field>
        </record>


    </data>
</odoo>