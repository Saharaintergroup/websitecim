<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ticker_news_tree" model="ir.ui.view">
            <field name="name">ticker.news.tree</field>
            <field name="model">ticker.news</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="view_ticker_news_form" model="ir.ui.view">
            <field name="name">ticker.news.form</field>
            <field name="model">ticker.news</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Ticker News">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="ticker_news_action" model="ir.actions.act_window">
            <field name="name">موجز الاخبار</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ticker.news</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    صفحة الأخبار.
                </p>
            </field>
        </record>

        <!-- Sequences for ticker.news -->
        <record id="seq_ticker_news" model="ir.sequence">
            <field name="name">Ticker News</field>
            <field name="code">self.ticker_news</field>
            <field name="prefix">N</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>