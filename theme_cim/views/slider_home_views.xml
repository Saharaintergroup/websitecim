<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_slider_home_form" model="ir.ui.view">
            <field name="name">slider.home.form</field>
            <field name="model">slider.home</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Slider Home">
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                             <field name="description"/>
                             <field name="url"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="slider_home_action" model="ir.actions.act_window">
            <field name="name">الاخبار</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">slider.home</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    الاخبار.
                </p>
            </field>
        </record>

    </data>
</odoo>