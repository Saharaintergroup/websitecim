<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--=======================Reports==========================-->
        <!--Tree View-->
        <record id="view_reports_tree" model="ir.ui.view">
            <field name="name">reports.tree</field>
            <field name="model">reports</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!--Form View-->
        <record id="view_reports_form" model="ir.ui.view">
            <field name="name">reports.form</field>
            <field name="model">reports</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Reports">
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="إسم التقرير"/>
                            <h1>
                                <field name="name" placeholder="إسم التقرير"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="attachment_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Form View-->
        <record id="reports_action" model="ir.actions.act_window">
            <field name="name">التقارير</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reports</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    إنشاء تقرير جديدة.
                </p>
            </field>
        </record>

    </data>
</odoo>