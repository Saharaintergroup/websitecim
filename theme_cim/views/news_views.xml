<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_news_tree" model="ir.ui.view">
            <field name="name">news.tree</field>
            <field name="model">news.news</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="view_news_form" model="ir.ui.view">
            <field name="name">news.form</field>
            <field name="model">news.news</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="News">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="news_action" model="ir.actions.act_window">
            <field name="name">News</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">news.news</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    News for home page.
                </p>
            </field>
        </record>

        <menuitem id="menu_news_menu" name="News"
                  sequence="2"
                  parent="menu_home_menu"
                  action="news_action"/>

        <!-- Sequences for news.news -->
        <record id="seq_news_news" model="ir.sequence">
            <field name="name">News</field>
            <field name="code">self.news</field>
            <field name="prefix">N</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>