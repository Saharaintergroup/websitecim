<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--=======================Decisions==========================-->
        <!--Tree View-->
        <record id="view_decisions_tree" model="ir.ui.view">
            <field name="name">decisions.tree</field>
            <field name="model">decisions</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        <!--Form View-->
        <record id="view_decisions_form" model="ir.ui.view">
            <field name="name">decisions.form</field>
            <field name="model">decisions</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Decisions">
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="إسم القرار"/>
                            <h1>
                                <field name="name" placeholder="إسم القرار"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="category_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                                <field name="date"/>
                                <field name="attachment_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Form View-->
        <record id="decisions_action" model="ir.actions.act_window">
            <field name="name">القرارات</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">decisions</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    إنشاء قرارات جديدة.
                </p>
            </field>
        </record>



        <!--Tree View-->
        <record id="view_decisions_category_tree" model="ir.ui.view">
            <field name="name">decisions.category.tree</field>
            <field name="model">decisions.category</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!--Action View-->
        <record id="decisions_category_action" model="ir.actions.act_window">
            <field name="name">تصنيفات الإطار القانوني</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">decisions.category</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    إنشاء تصنيف جديد.
                </p>
            </field>
        </record>

    </data>
</odoo>