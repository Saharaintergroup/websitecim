<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--=======================Jobs==========================-->
        <!--Tree View-->
        <record id="view_jobs_tree" model="ir.ui.view">
            <field name="name">jobs.tree</field>
            <field name="model">jobs</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <!--Form View-->
        <record id="view_jobs_form" model="ir.ui.view">
            <field name="name">jobs.form</field>
            <field name="model">jobs</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Jobs">
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Form View-->
        <record id="jobs_action" model="ir.actions.act_window">
            <field name="name">jobs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">jobs</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create new jobs.
                </p>
            </field>
        </record>
</data>
</odoo>