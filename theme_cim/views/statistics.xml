<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="statistics_view_form" model="ir.ui.view">
            <field name="name">statistics_view_form</field>
            <field name="model">statistics</field>
            <field name="arch" type="xml">
                <form string="الإحصائيات">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="value"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="statistics_view_tree" model="ir.ui.view">
            <field name="name">statistics_view_tree</field>
            <field name="model">statistics</field>
            <field name="arch" type="xml">
                <tree string="الإحصائيات">
                    <field name="name"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>

        <record id="statistics_action" model="ir.actions.act_window">
            <field name="name">الإحصائيات</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">statistics</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>