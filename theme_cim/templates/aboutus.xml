    <!--Executive crew-->
    <record id="executive_crew_page" model="website.page">
        <field name="name">Executive crew</field>
        <field name="url">/executive-crew</field>
        <field name="type">qweb</field>
        <field name="website_indexed" eval="False"/>
        <field name="is_published">True</field>
        <field name="key">theme_cim.executive_crew_page</field>
        <field name="arch" type="xml">
            <t name="Executive crew" t-name="theme_cim.executive_crew_page">
                <t t-call="website.layout">
                    <div id="wrap">
                        <section class="pt50 pb50">
                            <div class="container">
                                <h3 class="hr_title_horizontal mb30">Executive crew</h3>
                                <div class="box_team d-flex align-items-center mt10 mb50"  t-foreach="president" t-as="p">
                                    <img t-att-src="image_data_uri(p.image)" class="photo_team" t-if="p.image"/>
                                    <div>
                                        <h4 class="mb20" t-esc="p.name"/>
                                        <p class="mb0" t-esc="p.description"/>
                                    </div>
                                </div>
                                <h4 class="mb20">Project management team</h4>
                                <div class="carousel-team owl-carousel owl-theme">
                                    <div class="item" t-foreach="teams" t-as="team">
                                        <div class="box_team d-flex align-items-center mt10 mb30">
                                            <img t-att-src="image_data_uri(team.image)" class="photo_team"  t-if="team.image"/>
                                            <div>
                                                <h5 class="mb20" t-esc="team.name"/>
                                                <p class="text-12 mb0" t-esc="team.description"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </field>
    </record>
    <!--Strategy-->
