                    <section id="o_our_partners" class="bg-white pt40 pb40">
                        <div class="container">
                            <h3 class="mb30 hr_title_vertical color-blue-4">الجهات التابعة</h3>
                            <div class="carousel-partners owl-carousel owl-theme" t-if="company_partners">
                                <div class="item" t-foreach="company_partners" t-as="partner">
                                    <!--If Popup-->
                                    <a data-toggle="modal" t-attf-data-target="#partnerModal{{partner.id}}"
                                       t-if="partner.open_details_in == 'popup'">
                                        <img t-att-src="image_data_uri(partner.image)" alt=""/>
                                    </a>
                                    <!--If Page-->
                                    <a t-attf-href="/company_partners/#{partner.id}"
                                       t-if="partner.open_details_in == 'page'">
                                        <img t-att-src="image_data_uri(partner.image)" alt=""/>
                                    </a>
                                    <!--If External url-->
                                    <a target="_blank" t-attf-href="#{partner.external_url}"
                                       t-if="partner.open_details_in == 'external_url'">
                                        <img t-att-src="image_data_uri(partner.image)" alt=""/>
                                    </a>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center align-items-center" t-else="">
                                <span class="text-content-empty">عذرا ، لا يوجد شركاء في الوقت الحالي
                                </span>
                            </div>
                        </div>
                        <!-- Modal-->
                        <t t-foreach="company_partners" t-as="partner">
                            <div t-if="partner.open_details_in == 'popup'" class="company_partners_modal modal fade"
                                 t-attf-id="partnerModal{{partner.id}}"
                                 tabindex="-1"
                                 role="dialog"
                                 t-attf-aria-labelledby="partnerModalLabel{{partner.id}}" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-dialog-zoom modal-lg"
                                     role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                <span>×</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">

                                            <div class="row align-items-center mb20">
                                                <div class="col">
                                                    <h5 class="hr_title_horizontal color-blue-4"
                                                        t-esc="partner.name"/>
                                                </div>
                                                <div class="col-auto">
                                                    <img t-att-src="image_data_uri(partner.image)"
                                                         class="logo_partner"/>
                                                </div>
                                            </div>
                                            <p t-field="partner.description"/>
                                            <p>
                                                <b>لزيارة موقع
                                                    <t t-esc="partner.name"/>
                                                    <a t-att-href="partner.url" class="link_partner" target="_blank">
                                                        إضغط هنا
                                                    </a>
                                                </b>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </section>
                </div>
            </xpath>
        </template>

    </data>
</odoo>