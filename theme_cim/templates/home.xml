<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!-- === Home Page === -->
        <template id="theme_cim.new_homepage" inherit_id="website.homepage">
            <xpath expr="//div[@id='wrap']" position="replace">
                <div id="wrap" class="oe_structure">

                    <section class="o_carousel_news">
                        <div id="my-carousel" class="carousel slide carousel-fade" data-ride="carousel"
                             data-interval="4000" t-if="slider_home">

                            <div class="carousel-inner">
                                <t t-set="index" t-value="true"/>
                                <t t-foreach="slider_home" t-as="item">
                                    <t t-if="index">
                                        <div class="carousel-item active"
                                             t-attf-style="background-image:url(data:image/jpg;base64,{{ item.image }})">
                                            <div class="content_item">
                                                <div class="container">
                                                    <div class="col-xl-7 col-lg-8 col-md-9 col-sm-10 col-11">
                                                        <h1 class="mb20 slideOutUp" t-esc="item.name"/>
                                                        <p t-esc="item.description"/>
                                                        <a t-att-href="item.url" class="btn btn-primary mt10">Read
                                                            more
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="carousel-item"
                                             t-attf-style="background-image:url(data:image/jpg;base64,{{ item.image }})">
                                            <div class="content_item">
                                                <div class="container">
                                                    <div class="col-xl-7 col-lg-8 col-md-9 col-sm-10 col-11">
                                                        <h1 class="mb20 slideOutUp" t-esc="item.name"/>
                                                        <p t-esc="item.description"/>
                                                        <a t-att-href="item.url" class="btn btn-primary mt10">Read
                                                            more
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                    <t t-set="index" t-value="false"/>
                                </t>
                            </div>
                            <a class="carousel-control-prev" href="#my-carousel" role="button" data-slide="prev">
                                <span class="fa fa-chevron-left"/>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#my-carousel" role="button" data-slide="next">
                                <span class="fa fa-chevron-right"/>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </section>
                    <div class="acme-news-ticker">
                        <div class="container">
                            <div class="acme-news-ticker-box d-flex align-items-center">
                                <div class="acme-news-ticker-label">موجز الاخبار</div>
                                <ul class="my-news-ticker d-flex align-items-center" t-if="ticker_news">
                                    <li t-foreach="ticker_news" t-as="item">
                                        <a href="#" t-esc="item.description"/>
                                    </li>
                                </ul>
                                <div class="d-flex justify-content-center align-items-center pl20" t-else="">
                                    <span class="text-content-empty text-14">آسف ، لا توجد أخبار في الوقت الحالي
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>


