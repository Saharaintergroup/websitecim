<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!-- === Home Page === -->
        <template id="theme_cim.new_homepage" inherit_id="website.homepage" name="Home">
            <xpath expr="//div[@id='wrap']" position="replace">
                <div id="wrap" class="oe_structure">

                    <section class="o_carousel_news">
                        <div id="my-carousel" class="carousel slide carousel-fade" data-ride="carousel"
                             data-interval="4000" t-if="slider_home">

                            <div class="carousel-inner">
                                <t t-set="index" t-value="true"/>
                                <t t-foreach="slider_home" t-as="item">
                                    <t t-if="index">
                                        <div class="carousel-item active"
                                             t-attf-style="background-image:url(data:image/jpg;base64,{{ item.image }})">
                                            <div class="content_item">
                                                <div class="container">
                                                    <div class="col-xl-7 col-lg-8 col-md-9 col-sm-10 col-11">
                                                        <h1 class="mb20 slideOutUp" t-esc="item.name"/>
                                                        <div t-field="item.short_description"/>
                                                        <a t-attf-href="/media-center/#{item.id}"
                                                           class="btn btn-primary mt10">قراءة المزيد
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="carousel-item"
                                             t-attf-style="background-image:url(data:image/jpg;base64,{{ item.image }})">
                                            <div class="content_item">
                                                <div class="container">
                                                    <div class="col-xl-7 col-lg-8 col-md-9 col-sm-10 col-11">
                                                        <h1 class="mb20 slideOutUp" t-esc="item.name"/>
                                                        <div t-field="item.short_description"/>
                                                        <a t-attf-href="/media-center/#{item.id}"
                                                           class="btn btn-primary mt10">قراءة المزيد
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                    <t t-set="index" t-value="false"/>
                                </t>
                            </div>
                            <a class="carousel-control-prev" href="#my-carousel" role="button" data-slide="prev">
                                <span class="fa fa-chevron-left"/>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#my-carousel" role="button" data-slide="next">
                                <span class="fa fa-chevron-right"/>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </section>
                    <div class="acme-news-ticker">
                        <div class="container">
                            <div class="acme-news-ticker-box d-flex align-items-center">
                                <div class="acme-news-ticker-label">موجز الاخبار</div>
                                <ul class="my-news-ticker d-flex align-items-center" t-if="ticker_news">
                                    <li t-foreach="ticker_news" t-as="item">
                                        <a href="#" t-esc="item.name"/>
                                    </li>
                                </ul>
                                <div class="d-flex justify-content-center align-items-center pl20" t-else="">
                                    <span class="text-content-empty text-14">آسف ، لا توجد أخبار في الوقت الحالي
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!--== Our business ==-->
                    <section id="o_our_business" class="pt70 pb70">
                        <div class="container">
                            <h3 class="mb30 hr_title_horizontal">اعمالنا</h3>
                            <div class="row">
                                <div class="col-12 col-sm-6 col-lg-3 mt20 mb10">
                                    <a href="/organization-of-communications"
                                       class="box_style_1 text-center">
                                        <div>
                                            <img src="/theme_cim/static/src/images/business/organization_of_communications.png"
                                                 class="mb20"/>
                                            <h5 class="mb10">تنظيم الإتصالات</h5>
                                            <p>تنظيم الاتصالات هو المسؤول عن تنظيم قطاع الإتصالات فى ليبيا لضمان توفير
                                                بيئة تنافسية عادلة وحرة، وهي الجهة القانونية المسؤولة عن إصدار التراخيص
                                                أو الإعفاء منها بموجب قانون الاتصالات
                                            </p>
                                            <p class="read_more_link_btn" href="/organization-of-communications">للمزيد اضغط هنا</p>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-12 col-sm-6 col-lg-3 mt20 mb10">
                                    <a href="/electronic-government"
                                       class="box_style_1 text-center">
                                        <div>
                                            <img src="/theme_cim/static/src/images/business/electronic_government.png"
                                                 class="mb20"/>
                                            <h5 class="mb10">الحكومة الإلكترونية</h5>
                                            <p>هو نظام حديث تتبناه الحكومات باستخدام الشبكة العنكبوتية العالمية
                                                والإنترنت في ربط مؤسساتها بعضها ببعض، وربط مختلف خدماتها بالمؤسسات
                                                الخاصة والجمهور عموما، ووضع المعلومة في متناول الأفراد وذلك لخلق علاقة
                                                شفافة تتصف بالسرعة والدقة تهدف للارتقاء بجودة الأداء
                                            </p>
                                            <p class="read_more_link_btn" href="/electronic-government">للمزيد اضغط هنا</p>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-12 col-sm-6 col-lg-3 mt20 mb10">
                                    <a href="/sector-development"
                                       class="box_style_1 text-center">
                                        <div>
                                            <img src="/theme_cim/static/src/images/business/sector_development.png"
                                                 class="mb20"/>
                                            <h5 class="mb10">تطوير القطاع</h5>
                                            <p>تسليط الضوء على أهم المشاريع الحيوية والاستراتيجية التي يتم العمل
                                                عليهاوالمشاريع المستهدف اطلاقها والتي تهدف بدورها الى تحسين جودة الخدمات
                                                المقدمة للمواطنين في كافة المدن الليبية والارتقاء بواقع الاتصالات وإحداث
                                                قفزة نوعية في كامل الخدمات التقنية لمواكبة آخر المستجدات التكنولوجية
                                                والتقنية في العالم
                                            </p>
                                            <p class="read_more_link_btn" href="/sector-development">للمزيد اضغط هنا</p>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-12 col-sm-6 col-lg-3 mt20 mb10">
                                    <a href="/company_partners/1"
                                       class="box_style_1 text-center">
                                        <div>
                                            <img src="/theme_cim/static/src/images/business/cybersecurity.png"
                                                 class="mb20"/>
                                            <h5 class="mb10">الأمن السبرانى</h5>
                                            <p>هو النشاط الذي يؤمن حماية الموارد البشرية والاساليب المرتبطة بتقنيات
                                                الاتصالات والمعلومات
                                            </p>
                                            <p class="read_more_link_btn" href="/company_partners/1">للمزيد اضغط هنا</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!--== Statistics ==-->
                    <section id="o_our_business" class="bg-white pt40 pb40">
                        <div class="container">
                            <h3 class="mb20 hr_title_horizontal color-blue-4">احصائيات استخدام شبكة المعلومات حسب الانشطة
                            </h3>
                            <div class="row skill-part">
                                <t t-foreach="statistics" t-as="sta">
                                    <div class="col-md-6 col-lg-3 skill-item mt10">
                                        <t t-if="(sta.value >= 0 and sta.value &lt; 25)">
                                            <div class="skill_container">
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #43c0fd; transform: rotate(180deg) skew(230deg);transform-origin: 0 0;"></div>
                                                <p>%</p>
                                                <span class="sk-value" t-esc="sta.value"/>
                                            </div>
                                        </t>
                                        <t t-if="(sta.value >= 25 and sta.value &lt; 50)">
                                            <div class="skill_container">
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #f8b421; transform: rotate(228deg) skew(0deg);transform-origin: 0 0;"></div>
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #f8b421; transform: rotate(181deg) skew(0deg);transform-origin: 0 0;"></div>
                                                <p>%</p>
                                                <span class="sk-value" t-esc="sta.value"/>
                                            </div>
                                        </t>
                                        <t t-if="(sta.value >= 50 and sta.value &lt; 75)">
                                            <div class="skill_container">
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #c683ff; transform: rotate(180deg) skew(0deg);transform-origin: 0 0;"></div>
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #c683ff; transform: rotate(260deg) skew(0deg);transform-origin: 0 0;"></div>
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #c683ff; transform: rotate(325deg) skew(0deg);transform-origin: 0 0;"></div>
                                                <p>%</p>
                                                <span class="sk-value" t-esc="sta.value"/>
                                            </div>
                                        </t>
                                        <t t-if="(sta.value >= 75 and sta.value &lt; 100)">
                                            <div class="skill_container">
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #ef4832; transform: rotate(180deg) skew(0deg);transform-origin: 0 0;"></div>
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #ef4832; transform: rotate(260deg) skew(0deg);transform-origin: 0 0;"></div>
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #ef4832; transform: rotate(345deg) skew(0deg);transform-origin: 0 0;"></div>
                                                <div style="position: absolute;top: 50%; left: 50%; width: 100vw; height: 100vw; background: #ef4832; transform: rotate(430deg) skew(0deg);transform-origin: 0 0;"></div>
                                                <p>%</p>
                                                <span class="sk-value" t-esc="sta.value"/>
                                            </div>
                                        </t>
                                        <span class="sk-name" t-esc="sta.name"/>
                                    </div>

                                </t>

                            </div>

                        </div>
                    </section>


