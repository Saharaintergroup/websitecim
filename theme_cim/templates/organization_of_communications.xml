                                                <img src="/theme_cim/static/src/images/services/ellipse.png"
                                                     class="icon_ellipse"/>
                                                </div>
                                                <h6>الطيف الترددى</h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </field>
